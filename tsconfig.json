{
    "compilerOptions":{
        "types":[
            "node"
        ],
        "lib": ["es2015", "dom",  "es2017"],
        "module": "commonjs",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "version": true,
        "target": "es5",
        "jsx": "React"
    },
    "include": [
        "public/**/*"
    ],
    "exclude":[
        "node_modules",
        "**/*.spec.ts",
        "**/__tests__/*.tsx"
    ],
    "typeRoots": [
        "node_modules/@types"
    ]
}
